set nocompatible              " be iMproved, required
filetype off                  " required


syntax on
set mouse=a
set paste

set expandtab
set shiftwidth=2
set softtabstop=2
set ruler

set colorcolumn=100
set statusline+=%F
set number
set cursorline
set showcmd
set showmatch

"Reading
set autoread

"Search
set magic
set incsearch
set hlsearch
set ignorecase
set smartcase

"Disable .swp backups
set nobackup
set nowritebackup
set noswapfile


